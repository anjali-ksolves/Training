<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_doctor_details" model="ir.actions.act_window">
        <field name="name">Doctors</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">form</field>


    </record>
    <record id="view_doctor_details_form" model="ir.ui.view">
        <field name="name">om_hospital.view_doctor_details_form</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" string="Doctor"/>
                        <field name="mobile" string="Contact"/>
                        <field name="email" string="Email"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
